	<view class="container">
		<!-- é¡¶éƒ¨ç»Ÿè®¡ä¿¡æ¯ -->
		<view class="stats-section">
			<view class="stat-card">
				<text class="stat-number">{{statistics.totalResidents || 0}}</text>
				<text class="stat-label">æ€»ä½æˆ·æ•°</text>
			</view>
			<view class="stat-card">
				<text class="stat-number">{{statistics.totalBuildings || 0}}</text>
				<text class="stat-label">æ€»æ ‹æ•°</text>
			</view>
			<view class="stat-card">
				<text class="stat-number">{{statistics.occupancyRate || 0}}%</text>
				<text class="stat-label">å…¥ä½ç‡</text>
			</view>
		</view>

		<!-- æœç´¢æ¡† -->
		<view class="search-section">
			<view class="search-box" @tap="goToSearch">
				<text class="search-icon">ğŸ”</text>
				<text class="search-placeholder">æœç´¢ä½æˆ·å§“åã€æ‰‹æœºå·</text>
			</view>
		</view>

		<!-- æ ‹åˆ—è¡¨ -->
		<view class="buildings-section">
			<view class="section-title">å°åŒºæ ‹å·</view>
			<view class="buildings-grid">
				<view 
					class="building-card" 
					v-for="building in buildings" 
					:key="building.building"
					@tap="goToBuilding(building)"
				>
					<view class="building-header">
						<text class="building-name">{{building.name}}</text>
						<text :class="['building-type', building.type]">
							{{building.type === 'flat' ? 'å¹³å±‚' : 'åˆ«å¢…'}}
						</text>
					</view>
					<view class="building-info">
						<text class="building-floors">{{building.floors.length}}å±‚</text>
						<text class="building-residents">{{getBuildingResidents(building.building)}}æˆ·</text>
					</view>
				</view>
			</view>
		</view>

		<!-- å¿«æ·æ“ä½œ -->
		<view class="quick-actions">
			<view class="action-title">å¿«æ·æ“ä½œ</view>
			<view class="action-grid">
				<view class="action-item" @tap="goToRegistration" v-if="!isRegistered">
					<text class="action-icon">ğŸ </text>
					<text class="action-text">ä½æˆ·ç™»è®°</text>
				</view>
				<view class="action-item" @tap="goToCertification" v-if="isRegistered && !hasHighCredit">
					<text class="action-icon">âœ…</text>
					<text class="action-text">ç”³è¯·è®¤è¯</text>
				</view>
				<view class="action-item" @tap="goToMyApplications">
					<text class="action-icon">ğŸ“‹</text>
					<text class="action-text">æˆ‘çš„ç”³è¯·</text>
				</view>
				<view class="action-item" @tap="goToAdminPanel" v-if="isAdmin">
					<text class="action-icon">âš™ï¸</text>
					<text class="action-text">ç®¡ç†é¢æ¿</text>
				</view>
			</view>
		</view>
	</view>
