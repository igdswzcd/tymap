<template>
  <view :class="['unit-dice-' + componentId, 'box', { 'disabled': disabled }]" ref="boxRef" :style="diceStyle">
    <view class="front face">
      <view v-if="disabled" class="lock-icon">
        <text>ğŸ”’</text>
      </view>
      <view v-else class="dice-content">
        <!-- ä¸­å¤®å•å…ƒå· -->
        <view class="unit-center">
          <text class="unit-number">{{ unitNumber }}</text>
        </view>

        <!-- å·¦ä¸‹è§’æ•°æ®åŒºåŸŸ -->
        <view class="bottom-left-data">
          <view class="resident-count-container">
            <text class="resident-count">{{ unitInfo.residentCount }}äºº</text>
          </view>
          <view class="household-rate-container">
            <text class="household-rate">{{ occupancyRate }}%</text>
          </view>
        </view>

        <!-- å³ä¸‹è§’å•å…ƒä¿¡æ¯ -->
        <view class="unit-info-corner">
          <text class="unit-label">Unit {{ unitNumber }}</text>
        </view>

        <!-- å³ä¸Šè§’æ¥¼å±‚ä¿¡æ¯ -->
        <view class="floor-info-corner">
          <text class="floor-count">{{ unitInfo.floorCount }}å±‚</text>
        </view>
      </view>
    </view>
    <view class="back face"></view>
    <view class="left face"></view>
    <view class="right face" :style="{
      transform: `rotateY(90deg) translateZ(${rightTranslateZ || '100px'})`
    }">
    </view>
    <view class="top face"></view>
  </view>
</template>

<script setup>
import { onMounted, ref, getCurrentInstance, computed } from 'vue'
import buildingManager from '@/utils/buildingManager.js'
import dataManager from '@/utils/dataManager.js'

const instance = getCurrentInstance()

const boxRef = ref(null)
const rightTranslateZ = ref('100px')
const componentId = ref(Math.random().toString(36).substr(2, 9))

// å“åº”å¼æ•°æ®
const unitInfo = ref({
  residentCount: 0,
  doorCount: 0,
  floorCount: 1,
  totalCapacity: 2
})

// Props
const props = defineProps({
  disabled: {
    type: Boolean,
    default: false
  },
  unitNumber: {
    type: Number,
    required: true
  }
})

// è®¡ç®—å…¥ä½ç‡
const occupancyRate = computed(() => {
  try {
    const doorCount = Number(unitInfo.value.doorCount) || 0
    const totalCapacity = Number(unitInfo.value.totalCapacity) || 1
    const rate = totalCapacity > 0 ? doorCount / totalCapacity : 0
    return Math.round(rate * 100)
  } catch (error) {
    return 0
  }
})

// è®¡ç®—éª°å­æ ·å¼
const diceStyle = computed(() => {
  return {}
})

// åŠ è½½å•å…ƒæ•°æ®
const loadUnitData = async () => {
  try {
    // è·å–åŸºç¡€å•å…ƒä¿¡æ¯
    const baseInfo = await buildingManager.getUnitStatisticsByUnit(props.unitNumber)
    if (baseInfo) {
      unitInfo.value = {
        ...unitInfo.value,
        floorCount: baseInfo.floorCount,
        totalCapacity: baseInfo.totalCapacity
      }
    }

    // è·å–ä½æˆ·æ•°æ®ï¼ˆå…¨å±€æŸ¥æ‰¾ï¼‰
    const residents = await dataManager.getResidentsByUnitGlobal(props.unitNumber)

    // è®¡ç®—å®é™…ç»Ÿè®¡
    const uniqueDoors = new Set(residents.map(r => `${r.floor}_${r.door}`))

    unitInfo.value = {
      ...unitInfo.value,
      residentCount: residents.length,
      doorCount: uniqueDoors.size,
    }
  } catch (error) {
    console.error('åŠ è½½å•å…ƒæ•°æ®å¤±è´¥:', error)
    // ä¿æŒé»˜è®¤å€¼
  }
}

onMounted(async () => {
	try {
		// åŠ è½½å•å…ƒæ•°æ®
		await loadUnitData()

		// è®¡ç®—å°ºå¯¸
		const query = uni.createSelectorQuery().in(instance?.proxy);
		query.select(`.unit-dice-${componentId.value} .front`).boundingClientRect(function(data) {
			if (data && data.width) {
				// right: åŸºäº front å…ƒç´ çš„å®½åº¦æ¥è®¡ç®—
				const rightZ = (data.width - 25) / Math.cos(16 * Math.PI / 180)
				rightTranslateZ.value = `${Math.max(rightZ, 50)}px`
			}
		}).exec()
	} catch (error) {
		console.log('UnitDice3Dåˆå§‹åŒ–å¤±è´¥ï¼Œä½¿ç”¨é»˜è®¤å€¼')
	}
})
</script>

