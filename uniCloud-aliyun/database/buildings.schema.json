{
  "bsonType": "object",
  "required": ["building", "type", "name", "floors"],
  "permission": {
    "read": true,
    "create": "auth.role[0] == 'admin'",
    "update": "auth.role[0] == 'admin'",
    "delete": "auth.role[0] == 'admin'"
  },
  "properties": {
    "_id": {
      "bsonType": "string",
      "description": "ID，系统自动生成"
    },
    "building": {
      "bsonType": "int",
      "description": "栋号：数字",
      "minimum": 1
    },
    "type": {
      "bsonType": "string",
      "description": "类型：flat-平层, villa-别墅",
      "enum": ["flat", "villa"]
    },
    "name": {
      "bsonType": "string",
      "description": "显示名称"
    },
    "floors": {
      "bsonType": "array",
      "description": "楼层配置",
      "items": {
        "bsonType": "int"
      }
    },
    "create_time": {
      "bsonType": "timestamp",
      "description": "创建时间"
    },
    "update_time": {
      "bsonType": "timestamp",
      "description": "更新时间"
    }
  }
}