{
  "bsonType": "object",
  "required": ["building", "unit", "floor", "door", "openid", "nickname", "apply_status"],
  "permission": {
    "read": true,
    "create": true,
    "update": true,
    "delete": true
  },
  "properties": {
    "_id": {
      "bsonType": "string",
      "description": "ID，系统自动生成"
    },
    "building": {
      "bsonType": "int",
      "description": "栋号",
      "minimum": 1
    },
    "unit": {
      "bsonType": "int",
      "description": "单元号",
      "minimum": 1
    },
    "floor": {
      "bsonType": "int",
      "description": "楼层",
      "minimum": 1
    },
    "door": {
      "bsonType": "int",
      "description": "门牌号：1或2",
      "minimum": 1,
      "maximum": 2
    },
    "openid": {
      "bsonType": "string",
      "description": "微信openid"
    },
    "nickname": {
      "bsonType": "string",
      "description": "昵称"
    },
    "avatar": {
      "bsonType": "string",
      "description": "头像地址"
    },
    "phone": {
      "bsonType": "string",
      "description": "手机号"
    },
    "apply_status": {
      "bsonType": "string",
      "description": "申请状态：rejected-驳回, verifying-核验中, trusted-信任",
      "enum": ["rejected", "verifying", "trusted"]
    },
    "is_super_admin": {
      "bsonType": "bool",
      "description": "超级管理员标识"
    },
    "is_unit_admin": {
      "bsonType": "bool",
      "description": "单元管理员标识"
    },
    "is_family_owner": {
      "bsonType": "bool",
      "description": "家庭户主标识"
    },
    "owner_type": {
      "bsonType": "string",
      "description": "所有者类型",
      "enum": ["owner", "tenant", "family"]
    }
  }
}