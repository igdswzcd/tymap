{
  "bsonType": "object",
  "required": ["building", "unit", "floor", "door", "openid", "nickname"],
  "permission": {
    "read": true,
    "create": "auth.role[0] == 'admin' || doc.openid == auth.openid",
    "update": "auth.role[0] == 'admin' || doc.openid == auth.openid",
    "delete": "auth.role[0] == 'admin' || doc.openid == auth.openid"
  },
  "properties": {
    "_id": {
      "bsonType": "string",
      "description": "ID，系统自动生成"
    },
    "building": {
      "bsonType": "int",
      "description": "栋号",
      "minimum": 1
    },
    "unit": {
      "bsonType": "int",
      "description": "单元号",
      "minimum": 1
    },
    "floor": {
      "bsonType": "int",
      "description": "楼层",
      "minimum": 1
    },
    "door": {
      "bsonType": "int",
      "description": "门牌号：1或2",
      "minimum": 1,
      "maximum": 2
    },
    "openid": {
      "bsonType": "string",
      "description": "微信openid"
    },
    "nickname": {
      "bsonType": "string",
      "description": "昵称"
    },
    "avatar": {
      "bsonType": "string",
      "description": "头像地址"
    },
    "phone": {
      "bsonType": "string",
      "description": "手机号"
    },
    "credit_level": {
      "bsonType": "int",
      "description": "信用等级：0-未认证，1-已认证，2-高信用",
      "minimum": 0,
      "maximum": 2
    },
    "is_super_admin": {
      "bsonType": "bool",
      "description": "超级管理员标识"
    },
    "is_unit_admin": {
      "bsonType": "bool",
      "description": "单元管理员标识"
    },
    "is_family_owner": {
      "bsonType": "bool",
      "description": "家庭户主标识"
    },
    "certified_by": {
      "bsonType": "string",
      "description": "认证人ID"
    },
    "owner_type": {
      "bsonType": "string",
      "description": "所有者类型",
      "enum": ["owner", "tenant", "family"]
    },
    "register_time": {
      "bsonType": "timestamp",
      "description": "注册时间"
    },
    "update_time": {
      "bsonType": "timestamp",
      "description": "更新时间"
    }
  }
}